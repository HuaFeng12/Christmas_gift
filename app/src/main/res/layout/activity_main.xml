<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/black_star_sky"
    tools:context="com.hqbb.christmasgift.MainActivity">


        <Button
            android:id="@+id/btn1_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="7dp"
            android:background="@drawable/back"
            android:layout_marginBottom="5dp"
            />

    <com.hqbb.christmasgift.view.SnowView
            android:id="@+id/RainView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <!--        android:id="@+id/snowView"-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView

            android:id="@+id/wishText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大侠啊，快向我许个愿吧"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/hanyi"
            />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="@mipmap/christmas_tree">

            <ImageView
                android:id="@+id/gift"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:onClick="onClick"
                android:src="@mipmap/gift"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/letter"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="20dp"
                android:onClick="onClick"
                android:src="@mipmap/letter"
                app:layout_constraintBottom_toTopOf="@+id/gift"
                app:layout_constraintLeft_toRightOf="@id/pie_man"
                app:layout_constraintTop_toBottomOf="@id/pie_man" />

            <ImageView
                android:id="@+id/candy_cane"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:src="@mipmap/candy_cane"
                app:layout_constraintRight_toLeftOf="@+id/candy"
                app:layout_constraintTop_toBottomOf="@id/cake" />

            <ImageView
                android:id="@+id/tree"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:src="@mipmap/tree"
                app:layout_constraintRight_toLeftOf="@id/glove"
                app:layout_constraintTop_toBottomOf="@id/glove" />

            <ImageView
                android:id="@+id/bell"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:onClick="onClick"
                android:src="@mipmap/bell"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hat" />

            <ImageView
                android:id="@+id/snow_man"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_margin="40dp"
                android:onClick="onClick"
                android:src="@mipmap/snow_man"
                app:layout_constraintRight_toLeftOf="@+id/sled"
                app:layout_constraintTop_toTopOf="@+id/cake" />

            <ImageView
                android:id="@+id/cake"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="120dp"
                android:onClick="onClick"
                android:src="@mipmap/cake"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gift" />0

            <ImageView
                android:id="@+id/ring"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:onClick="onClick"
                android:src="@mipmap/ring"
                app:layout_constraintRight_toLeftOf="@id/gift"
                app:layout_constraintTop_toBottomOf="@id/letter" />

            <ImageView
                android:id="@+id/sock"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:onClick="onClick"
                android:src="@mipmap/sock"
                app:layout_constraintLeft_toRightOf="@id/gift"
                app:layout_constraintTop_toBottomOf="@id/gift" />

            <ImageView
                android:id="@+id/deer"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:onClick="onClick"
                android:src="@mipmap/deer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/candy" />

            <ImageView
                android:id="@+id/hat"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:onClick="onClick"
                android:src="@mipmap/hat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/wine"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:src="@mipmap/wine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bell" />

            <ImageView
                android:id="@+id/glove"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="1dp"
                android:onClick="onClick"
                android:src="@mipmap/glove"
                app:layout_constraintRight_toLeftOf="@id/letter"
                app:layout_constraintTop_toBottomOf="@id/pie_man" />

            <ImageView
                android:id="@+id/candy"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="72dp"
                android:onClick="onClick"
                android:src="@mipmap/candy"
                app:layout_constraintLeft_toRightOf="@id/cake"
                app:layout_constraintTop_toBottomOf="@id/sock" />

            <ImageView
                android:id="@+id/snowflake"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:onClick="onClick"
                android:src="@mipmap/snowflake"
                app:layout_constraintLeft_toRightOf="@id/wine"
                app:layout_constraintTop_toBottomOf="@id/flower" />

            <ImageView
                android:id="@+id/pie_man"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:src="@mipmap/pie_man"
                app:layout_constraintRight_toLeftOf="@id/gift"

                app:layout_constraintTop_toBottomOf="@id/wine" />

            <ImageView
                android:id="@+id/flower"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:onClick="onClick"
                android:src="@mipmap/flower"
                app:layout_constraintStart_toEndOf="@id/bell"
                app:layout_constraintTop_toBottomOf="@id/hat" />

            <ImageView
                android:id="@+id/sled"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:onClick="onClick"
                android:src="@mipmap/sled"
                app:layout_constraintRight_toLeftOf="@id/deer"
                app:layout_constraintTop_toBottomOf="@id/candy" />

            <ImageView
                android:id="@+id/chrismasman"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:src="@mipmap/chrismasman"
                app:layout_constraintRight_toLeftOf="@id/deer"
                app:layout_constraintTop_toBottomOf="@id/candy" />

            <Button
                android:id="@+id/wish"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_corner"
                android:fontFamily="@font/hanyi"
                android:onClick="onClick"
                android:text="开始许愿"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>